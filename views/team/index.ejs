<link rel="stylesheet" href="../css/style.css">
<main id="agents mt-10">
    <section class="agent-list w-100 flex f-col ac jc">
        <div class="search-form w-90 mt-10">
            <h2 class="">Search agent</h2>
            
            <form action="/team" method="get">
                <input type="text" name="name" id="name" value="<%=searchOptions.name%>">
                <button type="submit" class="felx ac jc bx"><i class="icon icon-search"></i></button>
            </form>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Field Workers</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrap">
                        <table class="table table-responsive-xl">
                            <thead>
                                <tr>
                                    <th>Contacts</th>
                                    <th>Full Name</th>
                                    <th>Status</th>
                                    <th>Profile</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% agents.forEach(agent=>{ %>
                                    <tr class="alert" role="alert">
                                        <td class="d-flex align-items-center">
                                            <div class="img" style="background-image: url(<%=agent.avatarPath%>);"></div>
                                            <div class="pl-3 email">
                                                <span><%= agent.email %></span>
                                                <span><%= agent.phone %></span>
                                            </div>
                                        </td>
                                        <td><%= agent.name %></td>                                        
                                        <td class="status"><span class="active">Active</span></td>
                                        <td><a href="team/<%= agent.id %>">View profile</a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>