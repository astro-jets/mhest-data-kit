<div class="agent-form">
    <div class="flex w-100 center-details">
        <div class="name w-50 flex f-col">
            <label for="" class="main-label">Facilitator Details</label>
            <div class="group flex w-100">
                <div class="w-40 flex f-col">
                    <label for="name">First Name</label>
                    <input type="text" name="firstname" value="<%=agent.firstname %> ">
                </div>

                <div class="w-40 flex f-col">
                    <label for="name">Last Name</label>
                    <input type="text" name="lastname" value="<%=agent.lastname %> ">
                </div>
            </div>
        </div>
        <div class="name w-50 flex f-col">
            <label for="" class="main-label">Contact Details</label>
            <div class="group flex w-100">
                <div class="w-40 flex f-col">
                    <label for="name">Phone</label>
                    <input type="text" name="phone" value="<%=agent.phone %> ">
                </div>

                <div class="w-40 flex f-col">
                    <label for="name">Email</label>
                    <input type="email" name="email" value="<%=agent.email %> ">
                </div>
            </div>
        </div>
    </div>

    <div class="flex w-100 bottom-details">
        <div class="name w-40 flex f-col logo-section ac jc">
            <input type="file" class="w-80 avatarCover filepond" name="avatar">
        </div>

        <div class="name password-fields w-50 flex f-col">
            <label for="" class="main-label">Password</label>
            <input type="password" name="password" id="">

            <label for="" class="main-label mt-1">Password Confirm</label>
            <input type="password" name="password_confirm" id="">
        </div>
    </div>
</div>