
<link rel="stylesheet" href="../css/style.css">
<div class="tabs">
    <div class="tab" data-link="/team">
        <i class="icon icon-users"></i><p>Field Team</p>
    </div>
    
    <div class="tab" data-link="/assessments">
        <i class="icon icon-bar-chart"></i><p>Assessment <span>76</span></p> 
    </div>
    <div class="tab" data-link="/requests">
        <i class="icon icon-help"></i><p>Requests <span>76</span></p>
    </div>
    <div class="tab" data-link="/reports">
        <i class="icon icon-pie-chart"></i><p>Reports <span>76</span></p> 
    </div>
</div>

<div class="graphs mt-5 w-100 flex">
    <div class="left-graph w-30 flex f-col ac bx">
        <h2>Statistic this month</h2>

        <div class="graph">
            <canvas id="myPieChart" class="w-10"></canvas>
        </div>

        <div class="key felx f-col ac jc">

            <div class="germination flex w-100">
                <span> &nbsp; </span>
                <p>                    
                    Germination Rate: 80%
                </p>
            </div>
            

            <div class="survival flex w-100">
                <span>&nbsp;</span>
                <p>Survival Rate: 30%</p>
            </div>

            <div class="motarity flex w-100">
                <span>&nbsp;</span>
                <p>Motarity Rate: 30%</p>
            </div>

        </div>
    </div>

    <div class="right-graph w-60 flex f-col ac">
        <h2>Traditional Authorities Stats</h2>
        <canvas id="barChart" "></canvas>
    </div>
</div>

<section class="cbo-list w-100 flex f-col ac mt-5 jc">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">CBOS</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrap">
                        <table class="table table-responsive-xl">
                            <thead>
                                <tr>
                                    <th>Contacts</th>
                                    <th>CBO Name</th>
                                    <th>Status</th>
                                    <th>Profile</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cbos.forEach(cbo=>{ %>
                                    <tr class="alert" role="alert">
                                        <td class="d-flex align-items-center">
                                            <div class="img" style="background-image: url('../uploads/cboLogos/<%= cbo.logo %>');"></div>
                                            <div class="pl-3 email">
                                                <span>
                                                    <%= cbo.email %>
                                                </span>
                                                <span>
                                                    <%= cbo.phone %>
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            <%= cbo.name %>
                                        </td>
                                        <td class="status"><span class="active">Active</span></td>
                                        <td><a href="cbos/<%= cbo.id %>">View profile</a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>