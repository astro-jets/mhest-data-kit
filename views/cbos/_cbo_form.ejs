<div class="cbo-form">
    <div class="flex w-100 top-details">
        <div class="name w-40 flex f-col">
            <label for="name" class="main-label">CBO Details</label>
            <label for="">CBO Name</label>
            <input type="text" name="name" value="<%=cbo.name %> ">
        </div>
        <div class="name w-50 flex f-col">
            <label for="" class="main-label">Location Details</label>
            <div class="group flex w-100">
                <div class="w-40 flex f-col">
                    <label for="name">Traditional Authority</label>
                    <input type="text" name="tAuthority" value="<%=cbo.tAuthority %> ">
                </div>

                <div class="w-40 flex f-col">
                    <label for="name">Area</label>
                    <input type="text" name="area" value="<%=cbo.area %> ">
                </div>
            </div>
        </div>
    </div>

    <div class="flex w-100 center-details">
        <div class="name w-50 flex f-col">
            <label for="" class="main-label">Members Details</label>
            <div class="group flex w-100">
                <div class="w-40 flex f-col">
                    <label for="name">Males</label>
                    <input type="text" name="males" value="<%=cbo.males %> ">
                </div>
        
                <div class="w-40 flex f-col">
                    <label for="name">Females</label>
                    <input type="text" name="females" value="<%=cbo.females %> ">
                </div>
            </div>
        </div>
        <div class="name w-50 flex f-col">
            <label for="" class="main-label">Chairman Details</label>
            <div class="group flex w-100">
                <div class="w-30 flex f-col">
                    <label for="name">Name</label>
                    <input type="text" name="chairman_name" value="<%=cbo.chairman_name %> ">
                </div>
    
                <div class="w-30 flex f-col">
                    <label for="name">Phone</label>
                    <input type="text" name="chairman_phone" value="<%=cbo.chairman_phone %> ">
                </div>

                <div class="w-30 flex f-col">
                    <label for="name">Email</label>
                    <input type="email" name="chairman_email" value="<%=cbo.chairman_email %> ">
                </div>
            </div>
        </div>
    </div>

    <div class="flex w-100 bottom-details">
        <div class="name w-40 flex f-col logo-section ac jc">
            <i class="icon icon-camera"></i>
            <p>select a file to upload CBO logo</p>
            <input type="file" class="logoBtn" name="logo" hidden>
        </div>
        <div class="name w-50 flex f-col">
            <label for="" class="main-label">Description</label>
            <textarea name="description" id="" cols="20" rows="10"></textarea>
        </div>
    </div>
</div>